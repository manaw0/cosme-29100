<%= render "shared/header" %>
<div class="user-main">
  <div class="form-wrap">   
  <h2 class="form-title">Log in</h2>

<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例）sample@sample.com", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
  </div>

  <div class="remember">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>   
  </div>

  <div class="actions">
    <%= f.submit "Log in",class:'register-btn' %>
  </div>
<% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
<%= render "shared/footer" %>